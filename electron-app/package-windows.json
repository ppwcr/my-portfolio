{
  "name": "set-portfolio-desktop-windows",
  "version": "1.0.0",
  "description": "Desktop version of SET Portfolio Management App for Windows",
  "main": "main-windows.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win-portable": "electron-builder --win portable",
    "build-win-installer": "electron-builder --win nsis",
    "dist": "npm run build-win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "portfolio",
    "stock",
    "thailand",
    "set",
    "windows",
    "desktop"
  ],
  "author": "SET Portfolio Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "path": "^0.12.7",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.setportfolio.desktop",
    "productName": "SET Portfolio Manager",
    "directories": {
      "output": "dist-windows"
    },
    "files": [
      "main-windows.js",
      "preload.js",
      "package.json",
      "assets/**/*",
      "python-backend/**/*"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "python-backend",
        "filter": [
          "**/*",
          "!electron-app/**",
          "!node_modules/**",
          "!.git/**",
          "!__pycache__/**",
          "!*.pyc",
          "!dist/**",
          "!build/**",
          "!*.spec"
        ]
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "publisherName": "SET Portfolio Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SET Portfolio Manager",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "SET-Portfolio-Manager-Portable.exe"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true
  }
}
